package examples

var badgeStyles = []string{"theme.css", "typography.css", "badge.css"}

templ Badge() {
	@Base(badgeStyles, "badge") {
	    <div class="flex gap-2">
            <span class="owl-badge">Badge</span>
            <span class="owl-badge owl-badge-secondary">Secondary</span>
            <span class="owl-badge owl-badge-destructive">Destructive</span>
            <span class="owl-badge owl-badge-outline">Outline</span>
		</div>
	}
}
